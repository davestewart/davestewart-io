<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="login-manager.xsl"?>

<sites name="Login Manager">

  <category name="Core sites">

    <site name="Google Analytics" url="http://google-analytics.com">
      <login url="https://www.google.com/accounts/ServiceLoginBoxAuth" Email="email" Passwd="password" continue="http://google.com/analytics/home/?et=reset&amp;hl=" />
    </site>

    <site name="localhost" url="http://localhost/">
      <page name="Home" url="http://localhost/index.php" />
      <database name="" url="http://localhost/phpmyadmin/index.php" username="user" password="pass" />
    </site>

  </category>

  <category name="Clients">

    <site name="Demo Site" url="http://demosite.com">
      <login url="http://demosite.com/login/" username="user" password="pass" />
      <database name="Custom Database" url="http://demosite.com/phpmyadmin/index.php" username="user" password="pass" client="phpmyadmin"></database>
      <folder name="Stats" url="http://demosite.com/stats/" username="user" password="pass" />
    </site>

    <site name="Blog" url="http://blog.com">
      <login url="http://blog.com/login/" username="user" password="pass" />
      <application name="Wordpress" url="http://blog.com/blog/">
        <login url="http://blog.com/blog/wp-login.php" username="user" password="pass" />
        <database url="http://blog.com/phpmyadmin/index.php" username="user" password="pass" />
      </application>
    </site>

  </category>
</sites>
